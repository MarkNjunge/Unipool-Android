<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="TextBase">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text_14_87" parent="TextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="Text_17_87" parent="TextBase">
        <item name="android:textSize">17sp</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="Text_14_54" parent="TextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="Text_17_54" parent="TextBase">
        <item name="android:textSize">17sp</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="ProfileItem" parent="TextBase">
        <item name="android:textSize">17sp</item>
        <item name="android:alpha">.87</item>
        <item name="android:padding">8dp</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/profile_view</item>
    </style>

    <style name="MyButtonStyle" parent="TextBase">
        <item name="android:background">@drawable/button_view</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CancelButtonStyle" parent="TextBase">
        <item name="android:background">@drawable/button_view_cancel</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
